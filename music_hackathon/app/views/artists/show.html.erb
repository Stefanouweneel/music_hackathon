<%= render 'artists/header' %>


<%= link_to 'Delete', @artist, method: :delete, data: { confirm: 'Are you sure?' } %>


<div id="slide1">
  <div class="content">
    <div>
      <h2><%= @artist.name %></h2>
      <% @images.each do |a| %>
      <%= image_tag a.css('.artist-content img').attr('src') %>
      <% end %>
      <br><br>
      <h2> Biography </h2>

      <% @wikiscrape.each do |a| %>
      <%= a.css('p')[1].text %> <br><br>
      <%= a.css('p')[2].text %> <br><br>
      <%= a.css('p')[3].text %> <br><br>
      <% end %>
    </div>
  </div>
</div>
<div id="slide2">
  <div class="content" >
    <% @mtvscrape.each do |a| %>
    <p><%= a.css('.month').text %>
    <%= a.css('.date').text %>
    <%= a.css('.day').text %></p>
    <%= a.css('.location').text %>
    <%= a.css('.venue'['href']) %>
    <br>
    <% end %>
   </div>
  </div>
</div>
<div id="slide3">
<div class="content">
  <div>
    <% @wikiscrape.each do |a| %>
    <h1><%= a.css('.firstHeading').text %></h1>
    <h2> Biography </h2>
    <%= a.css('p')[0].text %> <br><br>
    <%= a.css('.hatnote').text %>
    <% end %>
  </div>
</div>
</div>
<div id="slide4">
  <div class="content">
    <h2>Twitter shit</h2>

  </div>
</div>
<div id="slide5">
  <div class="content">
    <h2>News</h2>
    <% @mtvnews.each do |a| %>
    <p><%= a.css('.news-title').text %></p>
    <p><%= a.css('.dateFormatted').text %></p>
    <%= link_to @mtvnewslink['href'], "#{@mtvnewslink['href']}" %>
    <% end %>
  </div>
</div>
<br>
