<div class="navbar-fixed">
  <ul id="dropdown1" class="dropdown-content black">
     <% @artists.each do |artist| %>
      <li> <%= link_to artist.name, artist_path(@artist, :id => artist.id) %> </li>
    <% end %>
  </ul>
<nav>
  <div class="nav-wrapper teal">
    <ul class="left hide-on-med-and-down">
      <li><a class="dropdown-button" href="#!" data-activates="dropdown1">Your Artists<i class="material-icons right">arrow_drop_down</i></a></li>
    </ul>
    <ul class="left hide-on-med-and-down">
    <% unless current_page?(root_path) %>
        <li><%= link_to "Delete #{@artist.name} from your list", @artist, method: :delete, data: { confirm: 'Are you sure?' } %><i class="material-icons right">delete</i></li>
    <% end %>
  </ul>
    <ul class="right hide-on-med-and-down">
      <li><%= form_for @artist, url: create_artists_path, html: {method: "post"} do |f| %>
        <div class="input-field col s6">
          <label for="search"><i class="material-icons">search</i></label>
          <%= f.text_field :name %>
          <% end %>
        </div>
      </li>
    </ul>
  </nav>
</div>
